{
  "version": 2,
  "builds": [
    {
      "src": "api/query.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "dashboard/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/query",
      "dest": "/api/query.py",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard/$1"
    }
  ],
  "functions": {
    "api/query.py": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
